<div class="container">


    <form>
      <div class="form-group">
        <label for="exampleFormControlInput1">Search by artist</label>
        <input type="artist" class="form-control" id="artist-search">
      </div>
      <button id="search-button" class="btn btn-secondary btn-lg">Song Search</button>
    </form>

    <!-- Rendered song/search info will get dumped here  -->
    <div id="postResultDiv"></div>
    <div id="song-results"></div>

    <div class="container added-songs">
      <h3>My Playlist</h3>
      <ul class="list-group">
        {{#each songs}}
            <li class="list-group-item">
              <img src="{{albumArt}}" alt="album art" height="200px" width="200px"> {{artistName}} : {{songName}} - {{albumName}}<audio controls src="{{mp3}}"></audio>
            </li>
        {{/each}}
      </ul>
    </div>


    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Playlist
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Create New Playlist</a>
            <form id="playlistForm">
                <div class="form-group">
                    <label for="searchArtist">Search by artist</label>
                    <input type="text" class="form-control" id="playlistInput">
                    <button class="btn btn-secondary btn-md newPlaylistBtn" type="submit"> + </button>
                </div>
            </form>
            <ul class="list-group">
        {{#each playlists}}
        <li class="list-group-item">
          <a class="dropdown-item" id="playlist" href="#">{{playlistName}}</a>
        </li>
        {{/each}}
            </ul>
        <li class="list-group-item" id="addPlaylist">

        </li>
        <a class="dropdown-item playList1" href="#">Playlist 1</a>
        <a class="dropdown-item" href="#">Playlist 2</a>
        <a class="dropdown-item" href="#">Playlist 3</a>
      </div>
    </div>
  </div>